<Window x:Class="PetHavenWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PetHavenWPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Button x:Name="btnSearch" Content="Search" HorizontalAlignment="Left" Margin="180,295,0,0" VerticalAlignment="Top" Width="82" Click="Button_Click"/>
        <TextBox x:Name="tbName" HorizontalAlignment="Left" Margin="180,254,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="btnFindAll" Content="Find All" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="337,295,0,0" Width="52" Click="btnFindAll_Click" />
        <Button x:Name="btnAdd" Content="Add Snake" HorizontalAlignment="Left" Margin="473,295,0,0" VerticalAlignment="Top" Width="78" Click="btnAdd_Click" />

    </Grid>
</Window>
